<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_studentdisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ranjith.tutor.studentdisplay">
    <Spinner
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/domain"
        android:layout_alignTop="@+id/domain_search"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/domain_search"
        android:layout_alignBottom="@+id/domain_search"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="Domain"
        android:ems="10"
        android:id="@+id/domain_search"/>

    <Button
        android:text="saerch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/domain_search"
        android:layout_centerHorizontal="true"
        android:onClick="display"
        android:layout_marginTop="136dp"
        android:id="@+id/button" />

</RelativeLayout>
